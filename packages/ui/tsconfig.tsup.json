{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "Node",
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "incremental": false,
    "strict": true
  },
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules", "**/*.d.ts", "vite.config.ts"]
}
