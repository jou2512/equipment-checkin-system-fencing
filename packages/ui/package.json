{
  "name": "@fecs/ui",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client-only": {
      "types": "./dist/client-only.d.ts",
      "import": "./dist/client-only.mjs",
      "require": "./dist/client-only.js"
    },
    "./styles.css": "./dist/styles.css",
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist && node scripts/copy-base-css.js",
    "build:clean": "rimraf dist && pnpm build"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "tailwind-merge": "^2.2.0"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@fecs/tailwind-config": "workspace:*",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@vitejs/plugin-react": "^4.0.0",
    "postcss-import": "^16.1.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}